@model List<CheeseMVC.Models.CheeseCategory>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <td>Type</td>
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td>@category.ID</td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>